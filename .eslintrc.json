{
  "rules": {
    "keyword-spacing": [2],
    "max-len": [2, {"code": 120, "tabWidth": 2, "ignoreUrls": true}],
    "new-cap": 0,
    "no-console": 0,
    "no-param-reassign": 0,
    "prefer-arrow-callback": [2, { "allowNamedFunctions": true }],
    "react/prefer-stateless-function": 0,
    "react/prop-types": 0,
    "valid-jsdoc": [0]
  },

  "env": {
    "mocha": true
  },

  "parser": "babel-eslint",

  "plugins": [
    "flowtype",
    "react"
  ],

  "extends": ["eslint:recommended", "airbnb", "plugin:flowtype/recommended"]
}
